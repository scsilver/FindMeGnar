  <% @resorts.reverse.each do |resort| %>
  <div class="row">
    <div class="col-xs-12">

    <h1 style="font-size: 6vw"><%=link_to resort.name, resort_path(resort)%></h1>
  </div>

      <div class="col-xs-8">


      <p class="lead">
        <%= resort.name + ' recieved '  + 'inches of snowfall, adding to its '  + ' inch base.  Todays temperatures will be around ' + ' degrees faregnheight. We think the resort will be '  + ' today.' %>
      </p>
    </div>
    <div class="col-xs-4">

      <p>
        <strong>Base:</strong>
        <%= resort.base %>
      </p>

      <p>
        <strong>Temp:</strong>
        <%= resort.temp %>
      </p>

      <p>
        <strong>Snowfall:</strong>
        <%= resort.snowfall %>
      </p>

      <p>
        <strong>Gnarlocity:</strong>
        <%= resort.gnarlocity %>
      </p>
    </div>
</div>
