<h1>Listing resorts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Base</th>
      <th>Temp</th>
      <th>Snowfall</th>
      <th>Gnarlocity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resorts.each do |resort| %>
      <tr>
        <td><%= resort.name %></td>
        <td><%= resort.base %></td>
        <td><%= resort.temp %></td>
        <td><%= resort.snowfall %></td>
        <td><%= resort.gnarlocity %></td>
        <td><%= link_to 'Show', resort %></td>
        <td><%= link_to 'Edit', edit_resort_path(resort) %></td>
        <td><%= link_to 'Destroy', resort, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resort', new_resort_path %>
