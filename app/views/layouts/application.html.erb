<!DOCTYPE html>
<html>
<head>
  <title>FindMeNot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="wrap">
  
  <!-- Fixed navbar -->
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Find Me Gnar</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li ><a href="/resorts/">Resorts</a></li>
          <li><%= link_to 'Rides', rides_path %> </li>
          <li><a href="/about">Api</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Ride By Resort <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <%- Resort.all.reverse.each do |r| %>
                        <li><a href="/rides?resort_to=<%=r.name%>"><%=r.name %></a></li>
              <% end%>
            
            </ul>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
      <%= yield %></div>
       <div class="navbar navbar-default navbar-fixed-bottom">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Find Me Gnar</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li ><a href="/resorts/">Resorts</a></li>
          <li><%= link_to 'Rides', rides_path %> </li>
          <li><a href="/about">Api</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Resorts <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <%- Resort.all.each do |r| %>
                        <li><a href="/rides?resort_to=<%=r.name%>"><%=r.name %></a></li>
              <% end%>
            
            </ul>
          </li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>

</body>
</html>
