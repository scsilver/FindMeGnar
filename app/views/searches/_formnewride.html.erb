<%= form_for(@ride) do |f| %>
<% if @ride.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@search.errors.count, "error") %>
    prohibited this search from being saved:
  </h2>

  <ul>
    <% @ride.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="actions">
  <div class="field">
    <%= f.label :location_from %><br/>
    <%= f.text_field :location_from, :class => 'textfield' %>
    <%= f.label :resort_to %><br/>
    <%= f.text_field :resort_to, :class => 'textfield' %>
  </div>
  <%= f.submit 'Submit', :class => 'submit' %>
</div>
<% end %>
