<table class="table">
  <thead>
    <th>Name</th>
    <th>Distance</th>
    <th>Temperature</th>
    <th>Base (in)</th>
    <th>24 hour Snowfall (in)</th>
    <th>Rides</th>
    <th>Webcam</th>
  </thead>
  <tbody>
    <%- @resorts.each do |resort| %>
    <tr>
      <td><%= resort.name %></td>
      <td><%= resort.distance_text %></td>
      <td><%= resort.temp  %>
        F&deg;</td>
      <td><%= resort.base  %>
        in</td>
      <td><%= resort.snowfall  %>
        in</td>
      <td><%= link_to Ride.where(resort_to: resort.name).count, rides_path(resort_to: resort.name) %></td>

      <td><%- resort.webcam.split(",").each_with_index do |webc, i| %>
        <a data-featherlight="image" href="<%= webc %>">Camera:
          <%=i+1%></a>
        <br>
        <%- end %>
      </td>
    </tf>
  </tr>

  <%- end %>
</tbody>
<script src="//code.jquery.com/jquery-latest.js"></script>
<script charset="utf-8" src="//cdn.rawgit.com/noelboss/featherlight/master/release/featherlight.min.js" type="text/javascript"></script>

</table>
