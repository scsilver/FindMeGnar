<table>
  <thead>
    <th>Name</th>
    <th>Distance</th>
    <th>Temperature</th>
    <th>Base (in)</th>
  </thead>
  <tbody>
    <%- @resorts.each do |resort| %>
      <tr>
        <td><%= resort.name %></td>
        <td><%= resort.distance_text %></td>
        <td><%= resort.temp  %> F&deg;</td>
        <td><%= resort.base  %> F&deg;</td>
      </tr>

    <%- end %>
  </tbody>
</table>

